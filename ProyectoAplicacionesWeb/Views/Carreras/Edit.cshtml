@model ProyectoAplicacionesWeb.Models.Carrera

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar carrera</h1>

<h4>Carrera</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoCarrera" />
            <div class="form-group">
                <label asp-for="NombreCarrera" class="control-label"></label>
                <input asp-for="NombreCarrera" class="form-control" />
                <span asp-validation-for="NombreCarrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveDivision" class="control-label"></label>
                <select asp-for="ClaveDivision" class="form-control" asp-items="ViewBag.ClaveDivision"></select>
                <span asp-validation-for="ClaveDivision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a todas las carreras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
