@model ProyectoAplicacionesWeb.Models.Divisione

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar división</h1>

<h4>División</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoDivisiones" />
            <div class="form-group">
                <label asp-for="NombreDivision" class="control-label"></label>
                <input asp-for="NombreDivision" class="form-control" />
                <span asp-validation-for="NombreDivision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionDivision" class="control-label"></label>
                <input asp-for="DescripcionDivision" class="form-control" />
                <span asp-validation-for="DescripcionDivision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a todas las divisiones</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
