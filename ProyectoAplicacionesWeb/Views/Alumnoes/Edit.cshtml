@model ProyectoAplicacionesWeb.Models.Alumno

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar alumno</h1>

<h4>Alumno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MatriculaAlumno" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoP" class="control-label"></label>
                <input asp-for="ApellidoP" class="form-control" />
                <span asp-validation-for="ApellidoP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoM" class="control-label"></label>
                <input asp-for="ApellidoM" class="form-control" />
                <span asp-validation-for="ApellidoM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estatus" class="control-label"></label>
                <input asp-for="Estatus" class="form-control" />
                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveGradoAlumnos" class="control-label"></label>
                <select asp-for="ClaveGradoAlumnos" class="form-control" asp-items="ViewBag.ClaveGradoAlumnos"></select>
                <span asp-validation-for="ClaveGradoAlumnos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveGrupoAlumnos" class="control-label"></label>
                <select asp-for="ClaveGrupoAlumnos" class="form-control" asp-items="ViewBag.ClaveGrupoAlumnos"></select>
                <span asp-validation-for="ClaveGrupoAlumnos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveDivisionAlumno" class="control-label"></label>
                <select asp-for="ClaveDivisionAlumno" class="form-control" asp-items="ViewBag.ClaveDivisionAlumno"></select>
                <span asp-validation-for="ClaveDivisionAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveCarreraAlumno" class="control-label"></label>
                <select asp-for="ClaveCarreraAlumno" class="form-control" asp-items="ViewBag.ClaveCarreraAlumno"></select>
                <span asp-validation-for="ClaveCarreraAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a todos los alumnos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
