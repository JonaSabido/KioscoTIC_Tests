@model IEnumerable<ProyectoAplicacionesWeb.Models.Proyecto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Proyectos </h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar Nuevo Proyecto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaveCarreraProyectosNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaveDivisionProyectosNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaveGradoProyectosNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaveGrupoProyectosNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <img src="~/imagenes/@Html.DisplayFor(modelItem => item.Imagen)" width="100" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Video)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaveCarreraProyectosNavigation.NombreCarrera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaveDivisionProyectosNavigation.DescripcionDivision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaveGradoProyectosNavigation.Grado1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaveGrupoProyectosNavigation.Grupo1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProyecto">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProyecto">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProyecto">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
