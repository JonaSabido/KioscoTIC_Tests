@model ProyectoAplicacionesWeb.Models.Proyecto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar proyecto</h1>

<h4>Proyecto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProyecto" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input type="file" name="archivo" asp-for="Imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video" class="control-label"></label>
                <input asp-for="Video" class="form-control" />
                <span asp-validation-for="Video" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estatus" class="control-label"></label>
                <input asp-for="Estatus" class="form-control" />
                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveDivisionProyectos" class="control-label"></label>
                <select asp-for="ClaveDivisionProyectos" class="form-control" asp-items="ViewBag.ClaveDivisionProyectos"></select>
                <span asp-validation-for="ClaveDivisionProyectos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveCarreraProyectos" class="control-label"></label>
                <select asp-for="ClaveCarreraProyectos" class="form-control" asp-items="ViewBag.ClaveCarreraProyectos"></select>
                <span asp-validation-for="ClaveCarreraProyectos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveGradoProyectos" class="control-label"></label>
                <select asp-for="ClaveGradoProyectos" class="form-control" asp-items="ViewBag.ClaveGradoProyectos"></select>
                <span asp-validation-for="ClaveGradoProyectos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveGrupoProyectos" class="control-label"></label>
                <select asp-for="ClaveGrupoProyectos" class="form-control" asp-items="ViewBag.ClaveGrupoProyectos"></select>
                <span asp-validation-for="ClaveGrupoProyectos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a todos los proyectos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
